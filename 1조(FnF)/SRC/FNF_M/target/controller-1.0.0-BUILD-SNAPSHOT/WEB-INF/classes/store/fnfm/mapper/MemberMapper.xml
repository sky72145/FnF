<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="store.fnfm.mapper.MemberMapper">
	<update id="delete">
		UPDATE customer SET status = #{status} WHERE user_id = #{user_id}
	</update>
	<update id="update">
		UPDATE customer 
		SET email = #{email},
		password = #{password},
		user_name = #{user_name},
		phone = #{phone},
		question = #{question},
		answer = #{answer} 
		WHERE user_id = #{user_id}
	</update>
	<insert id="insert">
		insert into customer (user_id,email,password,user_name,phone,birth,question,answer,status) 
		values (#{user_id},#{email},#{password},#{user_name},#{phone},#{birth},#{question},#{answer},#{status})
	</insert>
	<select id="read" resultType="store.fnfm.vo.MemberVO">
		select * from customer where user_id=#{user_id}
	</select>
</mapper>
